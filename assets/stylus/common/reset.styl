html, body
	width 100%
	height 100%

*
	box-sizing border-box
	color inherit

body, p, ol, ul, h1, h2, h3, h4, h5, h6
	margin 0
	padding 0

ol, ul
	list-style none
	-webkit-margin-before: 0
	-webkit-margin-after: 0
	-webkit-margin-start: 0
	-webkit-margin-end: 0
	-webkit-padding-start: 0

h1, h2, h3, h4, h5, h6
	font-size 100%
	font-weight normal

input, textarea, select
	outline 0
	font inherit

input[type="submit"],
input[type="reset"],
input[type="button"],
button
	border 0
	// cursor: default
	font inherit
	// line-height: normal
	overflow visible
	-webkit-appearance button // for input
	-webkit-user-select none // for button
	-moz-user-select none
	-ms-user-select none
	outline 0

input::-moz-focus-inner,
button::-moz-focus-inner
	border 0
	padding 0

table
	border-collapse collapse
